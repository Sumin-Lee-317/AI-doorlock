<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
 
    <font android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/nexon"/>
 
</font-family>







<TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="20dp"
          android:text="@string/SignIn_scr_signin"
          android:textColor="@color/primary_blue1"
          android:fontFamily="@font/" />


<EditText
          android:id="@+id/Edit_UserName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="User Name"
          android:fontFamily="@font/"
          android:background="@color/primary_blue3" />
<EditText
          android:id="@+id/Edit_Password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Password"
          android:fontFamily="@font/"
          android:background="@color/primary_blue3" />


<TextView
          android:id="@+id/ForgotPassword"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:text="@string/SignIn_scr_forgetpassword"
          android:textColor="@color/black"
          android:fontFamily="@font/" />


<Button
        android:id="@+id/Btn_Contiunue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SignIn_scr_continue"
        android:background="@color/primary_blue1"
        android:textColor="@color/white"
        android:fontFamily="@font/" />


<TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="20dp"
          android:text="@string/SignIn_scr_signup"
          android:textColor="@color/black"
          android:fontFamily="@font/" />
